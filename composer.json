{
    "name": "pecserke/twig-doctrine-loader-bundle",
    "type": "symfony-bundle",
    "description": "Symfony2 Twig DoctrineLoader Bundle",
    "keywords": [ "Doctrine", "Twig", "Template", "Loader" ],
    "license": "MIT",
    "homepage": "https://github.com/tomas-pecserke/TwigDoctrineLoaderBundle",
    "authors": [
        {
            "name": "Tomáš Pecsérke",
            "email": "tomas@pecserke.eu"
        }
    ],
    "autoload": {
        "psr-4": { "Pecserke\\Bundle\\TwigDoctrineLoaderBundle\\": "" }
    },
    "require": {
        "php": ">=5.3.3",
        "symfony/twig-bundle": "~2.2",
        "symfony/doctrine-bridge": "~2.3",
        "pecserke/universal-mappings": "~1.0@dev"
    },
    "require-dev": {
        "doctrine/doctrine-bundle": "~1.2",
        "doctrine/orm": "~2.3",
        "doctrine/mongodb-odm-bundle": "~3.0@beta",
        "doctrine/mongodb-odm": "*@beta"
    },
    "suggest": {
        "doctrine/doctrine-bundle": "Support for loading twig templates from relation databases",
        "doctrine/mongodb-odm-bundle": "Support for loading twig templates from MongoDB",
        "doctrine/couchdb-odm-bundle": "Support for loading twig templates from CouchDB"
    },
    "minimum-stability": "stable",
    "extra": {
        "branch-alias": {
            "dev-master": "1.0-dev"
        }
    }
}
